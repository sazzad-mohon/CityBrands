<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000" >

        <ImageButton
            android:id="@+id/row_all_shop_push_hover_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="8dip"
            android:background="@drawable/list_indicator_m" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/row_all_shop_push_hover_image"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/row_all_shop_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop name"
                android:textColor="#14282d"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row_all_shop_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Afstand 2 km."
                android:textColor="#62c9d2"
                android:textSize="10sp"
                android:textStyle="normal" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/row_all_shop_arrow_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:background="@drawable/list_arrow_button" />

        <ImageButton
            android:id="@+id/row_all_shop_favorite_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@+id/row_all_shop_arrow_icon"
            android:background="@drawable/list_favorite_normal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:src="@drawable/list_view_devider" 
            android:layout_marginLeft="5dip"/>
    </RelativeLayout>

</LinearLayout>