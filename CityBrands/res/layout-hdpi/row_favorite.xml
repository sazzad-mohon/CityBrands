<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@+id/row_most_popular_number"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/row_favorite_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop name"
                android:textColor="#14282d"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row_favorite_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Afstand 2 km."
                android:textColor="#62c9d2"
                android:textSize="10sp"
                android:textStyle="normal" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/row_favorite_arrow_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:background="@drawable/list_arrow_button" />

        <ImageButton
            android:id="@+id/row_favorite_favorite_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/row_favorite_arrow_icon"
            android:background="@drawable/list_favorite_selected" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/list_view_devider" />
    </RelativeLayout>

</LinearLayout>